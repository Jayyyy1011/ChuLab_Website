<div class="text-center">
  <h1>成員資料</h1>
</div>

<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

<table class="table table-hover">
  <thead>
    <tr>
      <td>名字</td>
      <td>信箱</td>
      <td>生日</td>
      <td>發表筆記</td>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.birthday %></td>
      <td><%= user.posts.count %></td>
      <% if current_user.admin? %>
      <td>
        <%= link_to("刪除", user_path(user), class:"btn btn-sm btn-default", method: :delete, data: { confirm: "Are you sure?"}) %>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

</div>
