<div class="text-center">
  <h1>成員資料</h1>
</div>

<br><br>

<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

<table class="table table-hover">
  <thead>
    <tr>
      <td>名字</td>
      <td>信箱</td>
      <td>生日</td>
      <td>發表筆記</td>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.birthday %></td>
      <td><%= user.posts.count %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= will_paginate @users %>
</div>


</div>
