<br>
<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
    <div class="panel panel-default panel-OP">
      <div class="panel-heading">
        <h1><h3>類別管理
          <% if current_user %>
          <%= link_to("新增類別", new_category_path, class:"btn OP-add-btn pull-right") %>
          <%= link_to("回上一頁", optical_elements_path, class:"btn OP-cat-btn pull-right") %>
          <% end %>
        </h3>
        </h1>
      </div>

      <div class="panel-body panel-body-chemical">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <td>類別</td>
              <td>元件數目</td>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.optical_elements.count %></td>
              <td>
                <%= link_to("編輯", edit_category_path(category), class:"btn btn-sm btn-default pull-right") %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>
