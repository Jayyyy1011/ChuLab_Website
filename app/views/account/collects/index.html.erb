<div class="panel panel-default">
    <div class="panel-heading">
      <h1 align="center">我的收藏</h1>
    </div>
</div>

<br><br>

<div class="col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6">
  <% @posts.each do |post| %>
      <div class="panel panel-default" id="post-<%= post.id %>">
        <div class="panel-heading">
          <h3 class="panel-title">
            <% if post_user_name_exist(post) %>
              <%= post.user.name %> 分享了 "<%= post.title %>"
            <% else %>
              <%= post.user.email %> 分享了 "<%= post.title %>"
            <% end %>
            <%= link_to("取消收藏", cancel_account_collect_path(post), class:"btn btn-xs btn-default pull-right", method: :post, :remote => true) %>
          </h3>
        </div>
        <div class="panel-body">
          <h5><%= render_post_content(post) %></h5>
          <h6 class="pull-right"><%= post.created_at %></h6>
        </div>
      </div>
  <% end %>

  <div class="text-center">
    <%= will_paginate @posts %>
  </div>


</div>
