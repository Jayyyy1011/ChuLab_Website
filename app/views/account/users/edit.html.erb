<h2 class="text-center">編輯個人資料</h2>

<%= simple_form_for @user, :url => account_user_path do |f| %>

  <div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4">
    <div class="form-group">
      <%= f.input :name, label: "名字", :autofocus => true, input_html:{ class: "form-control"} %>
      <%= f.input :birthday, label: "生日", :as=> 'string', placeholder: "YYYY-MM-DD" %>
    </div>

    <br></br>
    <%= f.submit "送出", class:"btn btn-primary", data: {disable_with: "送出中..."} %>
  </div>

<% end %>

<script>
  $("#user_birthday").datepicker({ format: "yyyy-mm-dd", language: "<%= I18n.locale %>"  });
</script>
