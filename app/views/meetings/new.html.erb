<div class="col-md-4 col-md-offset-4">
  <h2>新增Meeting時程</h2>
  <hr>
  <%= form_for @meeting do |f| %>

    <% if @meeting.errors.any? %>
    <ul>
      <% @meeting.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    <% end %>
    </ul>

  日期
  <%= f.text_field :date %>
  <br>
  講者
  <%= f.text_field :speaker %>
  <br>
  備註
  <%= f.text_area :remark %>
  <br>
  <%= f.submit "送出", disable_with: "提交中..." %>
  <% end %>
</div>
