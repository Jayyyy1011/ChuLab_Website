<div class="text-center">
  <h1> Meeting時程表 </h1>
</div>

<div class="col-md-4 col-md-offset-4">

  <br></br>

  <table class="table table-hover">

    <thead>
      <tr>
        <td>日期</td>
        <td>講者（ＬＫＣ）</td>
        <td>講者（ＩＣＣ）</td>
        <td>備註</td>
      </tr>
    </thead>

    <tbody id="meeting-list">
      <% @meetings.each do |meeting| %>
      <tr id="meeting-<%= meeting.id %>">
        <td><%= meeting.date %></td>
        <td><%= meeting.speaker %></td>
        <td><%= meeting.speaker2 %></td>
        <td><%= meeting.remark %></td>
      <% end %>
      </tr>
    </tbody>

  </table>
</div>
