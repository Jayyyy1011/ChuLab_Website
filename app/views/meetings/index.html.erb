<div class="text-center">
  <h1> Meeting時程表 </h1>
</div>

<div class="col-md-12">
  <div class="meeting">
    <%= link_to("新增", new_meeting_path, class:"btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">

    <thead>
      <tr>
        <td>日期</td>
        <td>講者</td>
        <td>備註</td>
      </tr>
    </thead>

    <tbody>
      <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.date %></td>
        <td><%= meeting.speaker %></td>
        <td><%= meeting.remark %></td>
        <td>
          <%= link_to("編輯", edit_meeting_path(meeting), class:"btn btn-sm btn-default") %>
          <%= link_to("刪除", meeting_path(meeting), class:"btn btn-sm btn-default", method: :delete, data: { confirm: "Are you sure?"}) %>
        </td>
      </tr>
      <% end %>
    </tbody>

  </table>
</div>
