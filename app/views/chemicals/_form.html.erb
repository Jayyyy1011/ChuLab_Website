<%= simple_form_for @chemical do |f| %>

  <div class="form-group">
    <%= f.input :name, label: "學名", input_html:{class: "form-control"} %>
    <%= f.input :formula, label: "化學式", input_html:{ class: "form-control"} %>
    <%= f.input :nickname, label: "別名", input_html:{ class: "form-control"} %>
    <%= f.input :package, label: "包裝", input_html:{ class: "form-control"} %>
    <%= f.input :company, label: "廠牌", input_html:{ class: "form-control"} %>
    <%= f.input :agent, label: "代理商", input_html:{ class: "form-control"} %>
    <%= f.input :storage_place, label: "存放處", input_html:{ class: "form-control"} %>
    <%= f.input :remain, label: "剩餘量", input_html:{ class: "form-control"} %>
    <%= f.input :remark, label: "備註", input_html:{ class: "form-control"} %>
  </div>
    <b>星號 * 表示必填</b>
    <br></br>
  <%= f.submit "送出", class:"btn btn-primary", data: {disable_with: "送出中..."} %>

<% end %>
